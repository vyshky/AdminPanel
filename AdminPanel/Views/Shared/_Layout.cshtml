<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AdminPanel</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/AdminPanel.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
	<header class="header">
		<div class="header-content responsive-wrapper">
			<div class="header-logo">
				<a href="#">
					<div>
						<img src="https://assets.codepen.io/285131/untitled-ui-icon.svg" />
					</div>
					<img src="https://assets.codepen.io/285131/untitled-ui.svg" />
				</a>
			</div>
			<div class="header-navigation">
				<nav class="header-navigation-links">
					<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					<a asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
					<a asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
				</nav>
				<div class="header-navigation-actions">
				@*	<a href="#" class="button">
						<i class="ph-lightning-bold"></i>
						<span>Upgrade now</span>
					</a>
					<a href="#" class="icon-button">
						<i class="ph-gear-bold"></i>
					</a>
					<a href="#" class="icon-button">
						<i class="ph-bell-bold"></i>
					</a>*@
					<a href="#" class="avatar">
						<img src="https://assets.codepen.io/285131/hat-man.png" alt="" />
					</a>
				</div>
			</div>

			@*TODO :: сделать всплывающее меню*@
			<a href="#" class="button"> 
				<i class="ph-list-bold"></i>
				<span>Menu</span>
			</a>
			@*/////////////////////////////////*@

		</div>
	</header>
	<main class="main">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>		
	</main>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
